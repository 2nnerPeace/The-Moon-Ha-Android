<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 기본 테마 정의 -->
    <style name="Theme.TheMoonHa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- 안드로이드 상태바 -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- 안드로이드 하단바 -->
        <item name="android:navigationBarColor">@color/white</item>
        <!-- ActionBar 텍스트 색상 설정 -->
        <item name="android:textColorPrimary">@color/black</item>
        <!--custom font-family 적용-->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 커스텀 텍스트 스타일 정의 -->
    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- BottomNavigationView 스타일 정의 -->
    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
    </style>


    <!-- Tab 폰트 스타일 정의 -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/happiness_sans_bold</item>
    </style>
</resources>