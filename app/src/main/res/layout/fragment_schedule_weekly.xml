<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:id="@+id/tv_year_month"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="2024-08"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <GridLayout
            android:id="@+id/gl_day_of_the_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_year_month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/vp_weekly_table"
            android:columnCount="8"
            android:rowCount="2">

        <!-- 요일 -->
        <TextView
                android:layout_width="21dp"
                android:layout_height="10dp"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:text="월"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_columnWeight="2"
                android:layout_gravity="fill" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_columnWeight="2"
                android:text="화"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="fill" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_columnWeight="2"
                android:text="수"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="fill" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_columnWeight="2"
                android:text="목"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="fill" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_columnWeight="2"
                android:text="금"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="fill" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_columnWeight="2"
                android:text="토"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="fill" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_columnWeight="2"
                android:text="일"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_gravity="fill" />
    </GridLayout>

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_weekly_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toBottomOf="@+id/gl_day_of_the_week"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</LinearLayout>