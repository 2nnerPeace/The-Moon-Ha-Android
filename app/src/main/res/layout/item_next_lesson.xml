<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
            xmlns:android="http://schemas.android.com/apk/res/android" 
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            app:cardCornerRadius="15dp" 
            android:layout_marginBottom="15dp" 
            app:cardElevation="4dp" 
            android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_applied_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@drawable/rounded_green_background"
                android:textSize="8sp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="신청 강좌"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tv_branch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:padding="4dp"
                android:background="@drawable/rounded_black_background"
                android:textSize="8sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="지점명"
                app:layout_constraintStart_toEndOf="@id/tv_applied_tag"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:maxLines="2"
                android:layout_marginHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_applied_tag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

        <LinearLayout
                android:id="@+id/infoLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

            <TextView
                    android:id="@+id/tv_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cnt"
                    android:textSize="8sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginEnd="12dp" />

            <TextView
                    android:id="@+id/tv_tutor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor Name"
                    android:textSize="8sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginEnd="12dp" />

            <TextView
                    android:id="@+id/tv_lesson_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lesson Time"
                    android:textSize="8sp"
                    android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/infoLayout"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="end">



            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_apply_btn"
                    android:layout_width="104dp"
                    android:layout_height="20dp"
                    android:text="라운지 바로가기"
                    android:textSize="10sp"
                    android:background="@drawable/rounded_green_background"
                    android:textColor="@android:color/white" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
